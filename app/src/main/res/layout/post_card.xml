<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:id="@+id/post_record"
    android:clickable="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="#F5F5F5">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cd_cl_post"
        android:padding="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:focusable="true">

        <!-- 用户头像 -->
        <ImageView
            android:id="@+id/cd_iv_profile"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_profile_placeholder"
            android:scaleType="centerCrop"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="12dp"/>

        <!-- 用户名和发布时间容器 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/cd_iv_profile"
            app:layout_constraintStart_toEndOf="@id/cd_iv_profile"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 用户名 -->
            <TextView
                android:id="@+id/cd_tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username_placeholder"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- 发布时间 -->
            <TextView
                android:id="@+id/cd_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_placeholder"
                android:textSize="12sp"
                android:textColor="#808080"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cd_cl_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cd_iv_profile"
            app:layout_constraintStart_toStartOf="@id/cd_iv_profile"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- 推文内容 -->
            <TextView
                android:id="@+id/cd_tv_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/tweet_content_placeholder"
                android:textSize="15sp"
                android:textColor="#333333"
                android:lineSpacingExtra="4dp"
                android:letterSpacing="0.01"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>